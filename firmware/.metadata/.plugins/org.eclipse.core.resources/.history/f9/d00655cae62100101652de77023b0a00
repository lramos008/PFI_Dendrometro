#ifndef LOG_FORMATTER_H
#define LOG_FORMATTER_H
// ==========================[ Includes ]===============================
#include <stdint.h>
#include <string.h>
#include "date_and_time.h"

// =======================[ Public functions ]============================
void logInit(const char *filename, const char *deviceName, const char *firmwareVersion);
void logFormatterGenerateHeader(char *buffer, uint32_t bufferSize);
void logFormatterBuildLine(char *buffer, uint32_t bufferSize, sDateTime *timeStamp, float temperature, float humidity);
void logFormatterWriteLine(const char *filename, const char *line);
void logClose(const char *filename);


#endif //LOG_FORMATTER_H
