#ifndef RTC_DRIVER
#define RTC_DRIVER

//Define addresses for time
#define SECONDS_ADDRESS 0x00;
#define MINUTES_ADDRESS	0x01;
#define HOURS_ADDRESS 	0x02;

//Define addresses for date
#define DAYS_ADDRESS 	0x04;
#define


typedef struct{
	uint8_t seconds;
	uint8_t minutes;
	uint8_t hours;
} sTime;

typedef struct{
	uint8_t day;
	uint8_t month;
	uint8_t year;
} sDate;

typedef struct{
	sDate date;
	sTime time;
}sDateAndTime;

#endif	// RTC_DRIVER
