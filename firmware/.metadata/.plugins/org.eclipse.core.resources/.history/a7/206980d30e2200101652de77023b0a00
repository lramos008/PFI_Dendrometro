#ifndef HM10_DRIVER_H
#define HM10_DRIVER_H
// ==========================[ Includes ]===============================
#include "main.h"
#include <string.h>
// ==========================[ Typedefs ]===============================
typedef enum{
	HM10_OK = 0,
	HM10_ERROR_DISCONNECTED,
	HM10_ERROR_SEND_FAILED,
	HM10_ERROR_READ_RESPONSE_FAILED
}tHm10Status;

typedef enum{
	BAUDRATE_9600HZ = 0,
	BAUDRATE_19200 = 1,
	BAUDRATE_38400 = 2,
	BAUDRATE_57600 = 3,
	BAUDRATE_115200 = 4,
	BAUDRATE_4800 = 5,
	BAUDRATE_2400 = 6,
	BAUDRATE_1200 = 7,
	BAUDRATE_230400 = 0
}tHm10BaudRate;
tHm10Status hm10CheckIfConnected(void);
#endif  //HM10_DRIVER_H
