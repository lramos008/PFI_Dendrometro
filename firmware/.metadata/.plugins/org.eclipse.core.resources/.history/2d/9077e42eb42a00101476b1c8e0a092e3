#ifndef HM10_DRIVER_H
#define HM10_DRIVER_H
// ==========================[ Includes ]===============================
#include <stdint.h>
#include <string.h>
#include <stdbool.h>

// ==========================[ Typedefs ]===============================
typedef enum{
	HM10_OK = 0,
	HM10_ERROR_BUSY,
	HM10_ERROR_UART,
	HM10_ERROR_AT_COMMAND_RESPONSE,
	HM10_ERROR_STRING,
	HM10_ERROR_TIMEOUT,
	HM10_ERROR_UNKNOWN
}HM10Status_t;

typedef enum{
	HM10_BAUD_9600 = 0,
	HM10_BAUD_19200,
	HM10_BAUD_38400,
	HM10_BAUD_57600,
	HM10_BAUD_115200,
}HM10Baudrates_t;

// ==========================[ Structs ]================================
typedef struct{
	void (*ATResponseCallback)(const uint8_t *data, uint16_t length);
	void (*CustomCmdCallback)(const uint8_t *response, uint16_t length);
}HM10Callbacks_t;

// ======================[ Public functions ]===========================
HM10Status_t HM10CheckResponse(void);
HM10Status_t HM10CheckBaudrate(HM10Baudrates_t *baudrate);
HM10Status_t HM10SetBaudrate(HM10Baudrates_t baudrate);
HM10Status_t HM10SetDeviceName(const char *name);
HM10Status_t HM10CheckMACAddress(void);
HM10Status_t HM10GoToSleep(void);
#endif //HM10_DRIVER_H
